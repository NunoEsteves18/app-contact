<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.main.contactosddm.MainActivity">

    <EditText
        android:id="@+id/id_etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserir Nome"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_etNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_etNome"
        android:hint="Inserir Numero ou id para Remover"
        android:textAlignment="center"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_below="@id/id_etNumero"
        android:orientation="horizontal"
        android:id="@+id/id_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/id_btnNovo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF3366FF"
            android:text="Novo"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/id_btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF3366FF"
            android:text="Delete"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/id_btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FF3366FF"
            android:text="Edit"
            android:textColor="#FFFFFFFF" />/>


    </LinearLayout>

    <ListView
        android:id="@+id/id_lvFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_ll"></ListView>
</RelativeLayout>